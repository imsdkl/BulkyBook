@model ProductVM

<form method="post" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <input asp-for="Product.ImageUrl" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="row">
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Product.Title" class="form-control" placeholder="Title" />
                    <label asp-for="Product.Title" class="form-label"></label>
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Product.Author" class="form-control" placeholder="Author" />
                    <label asp-for="Product.Author" class="form-label"></label>
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Product.ISBN" class="form-control" placeholder="ISBN" />
                    <label asp-for="Product.ISBN" class="form-label"></label>
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <label asp-for="Product.CategoryId" class="input-group-text">Category</label>
                    <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select" placeholder="CategoryId">
                        <option disabled selected>Choose...</option>
                    </select>
                </div>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="py-2 col-12">
            <label asp-for="Product.Description" class="ms-2 text-muted"></label>
            <textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input asp-for="Product.ListPrice" class="form-control" placeholder="ListPrice" />
                    <label asp-for="Product.ListPrice" class="form-label"></label>
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input asp-for="Product.Price" class="form-control" placeholder="Price" />
                    <label asp-for="Product.Price" class="form-label"></label>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input asp-for="Product.Price50" class="form-control" placeholder="Price50" />
                    <label asp-for="Product.Price50" class="form-label"></label>
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input asp-for="Product.Price100" class="form-control" placeholder="Price100" />
                    <label asp-for="Product.Price100" class="form-label"></label>
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input type="file" name="file" asp-for="Product.ImageUrl" class="form-control" placeholder="ImageUrl" />
            <label asp-for="Product.ImageUrl" class="input-group-text"></label>
            <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
        </div>
        <div class="col-2 mb-3">
            <img src="@Model.Product.ImageUrl" width="100%"
                 style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                @if (Model.Product.Id != 0)
                {
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                }
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}