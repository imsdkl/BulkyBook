@model Product
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-floating mb-3">
                    <input asp-for="Title" class="form-control" placeholder="Title" disabled />
                    <label asp-for="Title" class="form-label"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating mb-3">
                    <input asp-for="Author" class="form-control" placeholder="Author" disabled />
                    <label asp-for="Author" class="form-label"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating mb-3">
                    <input asp-for="ISBN" class="form-control" placeholder="ISBN" disabled />
                    <label asp-for="ISBN" class="form-label"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-floating mb-3">
            <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 200px" disabled></textarea>
            <label asp-for="Description" class="form-label"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input asp-for="ListPrice" class="form-control" placeholder="ListPrice" disabled />
                    <label asp-for="ListPrice" class="form-label"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input asp-for="Price" class="form-control" placeholder="Price" disabled />
                    <label asp-for="Price" class="form-label"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input asp-for="Price50" class="form-control" placeholder="Price50" disabled />
                    <label asp-for="Price50" class="form-label"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input asp-for="Price100" class="form-control" placeholder="Price100" disabled />
                    <label asp-for="Price100" class="form-label"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border  form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>